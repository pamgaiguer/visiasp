@model IEnumerable<VisiProj.Models.ImagemProjetoModel>

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <div class="row">
        <h2>Imagem do Projeto - Visualização Geral</h2>
        <ol class="breadcrumb">
            Você está em:
            <li>Imagens do projeto</li>
            <li class="active">Home</li>
        </ol>
        <p>
            @Html.ActionLink("Criar imagem", "Create", new { id = (int)ViewBag.ProjetoId }, new { @class = "btn btn-primary" })
        </p>
        <table class="table table-condensed">
            <tr>
                <th>@Html.DisplayNameFor(model => model.UrlNormal)</th>
                <th>@Html.DisplayNameFor(model => model.UrlMiniatura)</th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.UrlNormal)</td>
                    <td>@Html.DisplayFor(modelItem => item.UrlMiniatura)</td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class="btn btn-warning"})
                        @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </table>
        <div>
            @Html.ActionLink("Voltar para projetos", "Index", "Admin", new { id = (int)ViewBag.ProjetoId }, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>