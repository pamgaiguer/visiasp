@*@model VisiProj.Models.LoginModel*@

@{
    ViewBag.Title = "Restrict Area";
}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            @if (!String.IsNullOrEmpty((string)ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger" role="alert">@((string)ViewBag.ErrorMessage)</div>
            }
            @using(Html.BeginForm("Login", "Admin", FormMethod.Post, new { @class = "form-signin", role = "form" })) 
            {
                <h2 class="form-signin-heading">VISI</h2>
                <input type="text" name="Username" class="form-control" placeholder="Login" required autofocus>
                <input type="password" name="Password" class="form-control" placeholder="Senha" required>
                <br>
                <input type="submit" class="btn btn-lg btn-primary btn-block">
            }
        </div>
    </div>
</div>

