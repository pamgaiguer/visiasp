@model VisiProj.Models.ProjetoModel

@{
    ViewBag.Title = "Apagar projeto";
}
<div class="container">
    <div class="row">
        <h2>Projetos - Exclusão</h2>
        <ol class="breadcrumb">
            Você está em:
            <li><a href="/Admin/Index/">Projetos</a></li>
            <li class="active">Excluir projeto</li>
        </ol>
        <div>
            <div class="alert bg-danger text-center">
                <p>Tem certeza que deseja apagar este projeto?</p>
            </div>
            <hr />
            <dl class="dl-horizontal">
                <dt>@Html.DisplayNameFor(model => model.Nome)</dt>
                <dd>@Html.DisplayFor(model => model.Nome)</dd>
                <dt>@Html.DisplayNameFor(model => model.Local)</dt>
                <dd>@Html.DisplayFor(model => model.Local)</dd>
                <dt>@Html.DisplayNameFor(model => model.Area)</dt>
                <dd>@Html.DisplayFor(model => model.Area)</dd>
                <dt>@Html.DisplayNameFor(model => model.Data)</dt>
                <dd>@Html.DisplayFor(model => model.Data)</dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Excluir" class="btn btn-danger" />
                    @Html.ActionLink("Voltar a lista de projetos", "Index", null, new { @class = "btn btn-primary" })
                </div>
            }
        </div>
    </div>
</div>