@model VisiProj.Models.CategoriaModel

@{
    ViewBag.Title = "Excluir categoria";
}
<div class="container">
    <div class="row">
        <h2>Categorias - Exclusão</h2>
        <ol class="breadcrumb">
            Você está em:
            <li><a href="/Categoria/Index">Categoria</a></li>
            <li class="active">Excluir categoria</li>
        </ol>
        <div class="alert bg-danger text-center">
            <p>Tem certeza que deseja apagar esta categoria?</p>
        </div>
        <hr />
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.Nome)</dt>
            <dd>@Html.DisplayFor(model => model.Nome)</dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Excluir" class="btn btn-danger">
                @Html.ActionLink("Voltar a lista de categorias", "Index", null, new { @class = "btn btn-primary" })
            </div>
        }
    </div>
</div>