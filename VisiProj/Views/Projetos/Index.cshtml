@model IEnumerable<VisiProj.Models.ProjetoModel>

@{
    ViewBag.Title = "Projetos";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int activeId = (int?)ViewBag.ActiveId == null ? 0 : (int)ViewBag.ActiveId;
    List<VisiProj.Models.ImagemProjetoModel> images = ViewBag.Imagens;
}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div data-spy="affix" data-offset-top="60" data-offset-bottom="200" class="box-lateral">
                <ul class="nav nav-pills nav-stacked">
                    <li @(activeId == 0 ? "class=active" : "")><a href="/projetos">TODOS</a></li>
                    @foreach (var item in Model)
                    {
                        <li @(activeId == item.Id ? "class=active" : "")>@Html.ActionLink(item.Nome, "Index", new { id = item.Id })</li>
                    }
                </ul>
            </div>
        </div>  
        <div class="col-md-9">
            @foreach (var foto in images)
            {
                <a href="#">
                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        <img src="@foto.UrlMiniatura" class=" img-responsive">
                        <div class="caption text-center">
                            <p>@foto.Projeto.Nome</p>
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
</div>